<Page x:Class="Проект.Pages.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Проект.Pages" xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ViewModel1}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUser">

    <Grid>
        <StackPanel>
            <Label Content="Название"/>
            <TextBox x:Name="tbName" Text="{Binding Path=CurrentService.Service.Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <Label Content="Пользователь"/>
            <ComboBox x:Name="cbUser" ItemsSource="{Binding Path=Users, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" DisplayMemberPath="Surname" SelectedItem="{Binding Path=CurrentUser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="Дата"/>
            <DatePicker DataContext="{Binding Path=CurrentDate}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <Button x:Name="bSave" Content="Сохранить" Margin="10" Command="{Binding Path=ServiceClientAddCommand}"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
